<form class="form" action="/puppies/add" method="post" encType="multipart/form-data">
  
  <label for="name" class="form-item">
    Name:
    <input id="name" type="text" name="name">
  </label>

  <label for="breed" class="form-item">
    Breed:
    <input id="breed" type="text" name="breed">
  </label>
  
  <label for="owner" class="form-item">
    Owner:
    <input id="owner" type="text" name="owner">
  </label>
  
  <label for="file-upload" class="form-item">
    Image:
    <input id="file-upload" type="file" name="image">
  </label>
  
  <input type="submit" name="" value="Submit">
</form>
